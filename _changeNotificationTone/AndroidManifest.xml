		<receiver android:name=".AutoReceiver" android:enabled="true"> 
            <intent-filter>
                <action android:name="com.exmaple.ChangeNotification.MorningTime" /> 
                <action android:name="com.exmaple.ChangeNotification.NightTime" />
                <action android:name="com.exmaple.ChangeNotification.StartTimers" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter> 
    	</receiver>
    </application>

</manifest>
